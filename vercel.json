{
  "version": 2,
  "buildCommand": "cd react-chat-app && npm install && npm run build",
  "outputDirectory": "react-chat-app/build",
  "installCommand": "npm install --prefix react-chat-app && npm install --prefix api",
  "framework": null,
  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs18.x"
    }
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/:path*"
    },
    {
      "source": "/(.*)",
      "destination": "/react-chat-app/build/$1"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/static/(.*)",
      "dest": "/react-chat-app/build/static/$1"
    },
    {
      "src": "/(.*\\.(js|css|ico|png|jpg|jpeg|svg|json|woff|woff2|ttf|eot))",
      "dest": "/react-chat-app/build/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/react-chat-app/build/index.html"
    }
  ]
}