# Environment Configuration for Production
# Copy this file to .env and update the values

# Application Settings
NODE_ENV=production
APP_NAME=Chat Application
APP_VERSION=1.0.0

# N8N Configuration
N8N_HOST=localhost
N8N_PORT=5678
N8N_PROTOCOL=http
WEBHOOK_URL=http://localhost:5678/
N8N_BASIC_AUTH_ACTIVE=false

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Embedding Service Configuration
EMBEDDING_SERVICE_HOST=embedding-service
EMBEDDING_SERVICE_PORT=80
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# React App Configuration
REACT_APP_N8N_WEBHOOK_URL=http://localhost:5678/webhook/chat-memory
REACT_APP_API_BASE_URL=http://localhost:5678
REACT_APP_APP_NAME=Chat Application
REACT_APP_VERSION=1.0.0

# Security Configuration
JWT_SECRET=your-jwt-secret-here
SESSION_SECRET=your-session-secret-here

# SSL Configuration (for production)
SSL_CERT_PATH=/etc/ssl/certs/cert.pem
SSL_KEY_PATH=/etc/ssl/private/key.pem

# Monitoring and Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Performance Configuration
MAX_CONNECTIONS=100
TIMEOUT=30000

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
